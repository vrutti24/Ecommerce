
  <div style="max-width: 350px; margin:auto; border-radius: 15px; box-shadow: 13px 13px 20px #cbced1, -13px -13px 20px #fff; padding: 40px 30px 30px 30px; border: 1px solid #fff">
    <h2 class="text">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class:"form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class:"form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password",  class: "form-control"%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-success w-100" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
